<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <SupportedOSPlatform>macos</SupportedOSPlatform>
    <RuntimeIdentifiers>osx-x64;osx-arm64</RuntimeIdentifiers>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PublishAot>true</PublishAot>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>SmallsOnline.MacOS.DefaultBrowser</PackageId>
    <RootNamespace>SmallsOnline.MacOS.DefaultBrowser</RootNamespace>
    <ApplicationId>online.smalls.DefaultBrowser</ApplicationId>
    <AssemblyName>browserdefault</AssemblyName>

    <Description>
      A CLI tool for setting the default browser on macOS.
    </Description>

    <Authors>Timothy Small</Authors>
    <Company>Smalls.Online</Company>
    <Copyright>© Smalls.Online</Copyright>

    <RepositoryUrl>https://github.com/Smalls1652/SmallsOnline.MacOS.DefaultBrowser</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

</Project>
